@model TestDA.Areas.Manager.Models.ViewModel.NhuCauDinhDuongData


@{
    ViewBag.Title = "ChucNang";
    Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
}

<section class="content-header">
    <h1>
        <i class="fa fa-file-text-o"></i>
        Nhu cầu dinh dưỡng
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Nhu cầu dinh dưỡng</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="container body-content">
        <h3>@ViewBag.ChucNang </h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="body-style form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.tuoi, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.DropDownListFor(model => model.tuoi, null, "--Chọn độ tuổi-- ", new { @class = "form-control col-md-2" })
                                @Html.ValidationMessageFor(model => model.tuoi, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.kcalo, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.kcalo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.kcalo, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.protein, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.protein, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.protein, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.calsi, htmlAttributes: new { @class = "col-sm-3" })<span></span>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.calsi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.calsi, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.sat, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.sat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sat, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.vitaminA, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.vitaminA, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vitaminA, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.vitaminB1, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.vitaminB1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vitaminB1, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vitaminB2, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.vitaminB2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vitaminB2, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vitaminPP, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.vitaminPP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vitaminPP, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vitaminC, htmlAttributes: new { @class = "col-sm-3" })
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.vitaminC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vitaminC, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ghiChu, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.ghiChu, new { @class = "form-control", @rows = 5 })
                            @Html.ValidationMessageFor(model => model.ghiChu, null, new { @class = "text-danger" })
