@model TestDA.Areas.Manager.Models.ViewModel.QuyenNDData
    @{
        ViewBag.Title = "ChucNang";
        Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
    }

    <section class="content-header">
        <h1>
            <i class="fa fa-building-o"></i>
            Quyền người dùng
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Quyền người dùng</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container body-content ">
            <h3>@ViewBag.ChucNang </h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @*@Html.HiddenFor(model => model.maNhaCC)*@
                <div class="body-quyenND form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.tenPQ, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.tenPQ, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tenPQ, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.chucNang, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(model => model.chucNang, new { @class = "form-control",rows=5 })
                            <br/><span>Mô tả chức năng phạm vi sử dụng quyền.</span><br/>
                            @Html.ValidationMessageFor(model => model.chucNang, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("<< Quay lại danh sách", "Index", "QuyenND")
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="reset" class="btn btn-primary" style="margin-right:10px;"><i class="fa fa-refresh"></i>Làm mới</button><button type="submit" value="Lưu thông tin" class="btn btn-primary"><i class="fa fa-save"></i>Lưu thông tin</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    @section Scripts{
        <script>
        </script>
    }

