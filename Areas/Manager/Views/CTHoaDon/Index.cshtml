@model TestDA.Areas.Manager.Models.ViewModel.CTHoaDonData

@{

    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
}

<section class="content-header">
    <h1>
        <i class="fa fa-file-text-o"></i>
        Chi tiết hóa đơn
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Chi tiết hóa đơn</li>
    </ol>
</section>
<section class="content">
    <!-- Main content -->
    <div class="container body-content">
        <div class="body-style">
            <h2>Danh sách chi tiết thực phẩm</h2>
            @using (Html.BeginForm("Index", "CTHoaDon", FormMethod.Get, new { @class = "form-inline", role = "search", id = "search-form", onsubmit = "return empty();" }))
            {
                @*@Html.AntiForgeryToken()*@
                if (@TempData["Success"] != null)
                {
                    <div class="add-sucess">
                        <script>
                            toastr.options = {
                                "closeButton": true,
                                "debug": false,
                                "newestOnTop": false,
                                "progressBar": false,
                                "positionClass": "toast-bottom-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            };
                            toastr["success"]("@TempData["Success"]");
                        </script>
                    </div>
                }
                <div class="form-inline">
                    <div class="">
                        @*tìm kiếm*@
                        <div class="form-group">
                            <label class="choice-type btn btn-default disabled">Tìm kiếm thông tin <i class="fa fa-angle-double-right" aria-hidden="true"></i></label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nhập thực phẩm...." name="tukhoa" value="@ViewBag.TKTimKiem" id="search-box" style="width:200px;">
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.maHoaDon, null, "--Chọn danh mục-- ", new { @class = "form-control" })
                        </div>
                        @*<div class="form-group">
                            <input type="date" class="form-control textImage" placeholder="Ngày nhập kho..." id="ngayNK" name="ngayNK" value="@ViewBag.NgayNK">
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control textImage" placeholder="Hạn sử dụng..." id="hanSD" name="hanSD" value="@ViewBag.HanSD">
                        </div>*@
                        <div class="form-group">
                            <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                    <div class="clearfix">  </div>
                    @Html.Raw("<span class='pull-right'> Tổng số bản ghi là: " + Model.danhSachCTHD.Count().ToString() + "</span>")

                </div>
            }
            @*thêm mới bản ghi*@
            <div class="form-inline" style=" margin: 10px 0;">
                <div class="form-group">
                    <a href="/Manager/CTHoaDon/ChucNang?type=Insert" class="btn btn-default btn-default hidden-xs"><i class="glyphicon glyphicon-plus"></i>Thêm thực phẩm vào kho</a>
                </div>
                <div class="form-group">
                    @*thêm biểu tượng in*@
                </div>
            </div>
        </div>
        @*kết thúc form tìm kiếm*@
        <div id="dsKhoTP">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="th-style">
                        <th>Phiếu chi tiết</th>
                        <th>Ngày lập</th>
                        <th>Thực phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn vị tính</th>
                        <th>Đơn giá(VND)</th>
                        <th>Thành tiền(VND)</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.danhSachCTHD.Count > 0)
                        {
                            //int j = 0;
                            foreach (var i in Model.danhSachCTHD)
                            {
                                // j++;
                                <tr>
                                    @*<td>@j.ToString()</td>*@
                                    <td>
                                        @Html.DisplayFor(m => i.soPhieuHD)
                                        <br /><a href="/Manager/KhoThucPham/ChucNang?type=Edit&mankhotp=@i.maHDCT" class="lnkEdit" data-value="@i.maHDCT" id="khoTP_@i.maHDCT">Sửa | </a>
                                        <a href="javascript:void(0)" class="lnkDelete" data-value="@i.maHDCT" id="groupKhoTP_@i.maHDCT">Xóa</a>
                                    </td>
                                    <td>@Html.DisplayFor(m => i.ngayTao)</td>
                                    <td>@Html.DisplayFor(m => i.donViTinh)</td>
                                    <td>@Html.DisplayFor(m => i.soLuong)</td>
                                    <td>@*@Html.DisplayFor(m => i.donGia)*@@string.Format("{0:N0}", i.donViTinh)</td>
                                    <td>@*@Html.DisplayFor(m => i.thanhTien)*@@string.Format("{0:N0}", i.thanhTien)</td>
                                    <td> @Html.DisplayFor(m => i.ghiChu)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11"> <p style="text-align:center;font-weight:bold;">Không có bản ghi nào</p></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <!--Phân trang-->
            @if (ViewBag.TotalPage > 1)
            {
                var pageDisplay = (int)ViewBag.MaxPage;
                int totalPage = (int)ViewBag.TotalPage;
                int currentPage = ((int)ViewBag.Page);

                // Create numeric links
                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                var link = "/Manager/KhoThucPham/Index";
                <nav>
                    <ul class="pagination">
                        @if (currentPage > ViewBag.First)
                        {
                            <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                            <li>
                                <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                            </li>

                        }
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (currentPage == i)
                            {

                                <li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>
                            }
                        }
                        @if (currentPage < totalPage)
                        {
                            <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                            <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                        }

                    </ul>
                </nav>

            }
            else
            {
                @*<span>Không có bản ghi nào</span>*@
            }
            @*kết thúc phân trang*@
        </div>
    </div>
</section>
@section Scripts{
    <script>
        $(function () {
            //$('#ngayNK').datepicker({ dateFormat: 'dd/mm/yy' });
            //$('#hanSD').datepicker({ dateFormat: 'dd/mm/yy' });
            //xóa một bản ghi
            $("a.lnkDelete").on("click", function () {
                var id = $(this).data('value');//lấy giá trị id của bản ghi
                console.log(id);
                var $tr = $(this).closest('tr');
                var answer = confirm("Bạn có chắc chắn xóa bản ghi là " + id + " . Tiếp tục?");
                if (answer)
                    $.ajax({
                        type: "POST",
                        url: "@(Url.Action("XoaKhoTP", "KhoThucPham"))",
                        data: { maKhoTP: id },
                        success: function (data) {
                            if (data == 0) {
                                $tr.css("background-color", "#ec645e");
                                location.reload();
                            } else {
                                //
                            }
                        },
                        error: function (error) {
                        }
                    });
                return false;
            });
        })//Xóa một bản ghi
        function empty() {
            var x = $('#search-box').val();
            if (x == " " || x == null) {
                var url = window.location.pathname;
                console.log(url);
                window.location(url);
                // return false;
            }
        }
    </script>
}








