@model TestDA.Areas.Manager.Models.ViewModel.CTHoaDonData

@{
    ViewBag.Title = "ChucNang";
    Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
}

<section class="content-header">
    <h1>
        <i class="fa fa-file-text-o"></i>
        Chi tiết hóa đơn
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Chi tiết hóa đơn</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="container body-content">
        @* <h3>@ViewBag.ChucNang </h3>*@
        @*thông tin hóa đơn thêm vào*@
        @Html.Action("ViewPartial", "PhieuHoaDon")
        <div class="clearfix">    </div>
        <div class="row">
            <div style="margin-left: 15px">  <h4>THÔNG TIN THỰC PHẨM</h4>  </div>
            <div class="col-md-7">

                @*danh sách thực phẩm của hóa đơn*@
                @Html.Action("TPHoaDonPartial", "PhieuHoaDon")
                @Html.ActionLink("<< Quay lại danh sách", "Index", "PhieuHoaDon")
            </div>
            <div class="col-md-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="body-style form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <fieldset class="the-fieldset">
                                <legend class="the-legend">Thêm thực phẩm:</legend>
                                @Html.HiddenFor(model => model.maHoaDon, new { Value = @ViewBag.maHoaDon })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.maThucPham, htmlAttributes: new { @class = "col-sm-3" })
                                    <div class="col-sm-6 custom-chosen">
                                        @Html.DropDownListFor(model => model.maThucPham, null, "--Chọn thực phẩm -- ", new { @class = "form-control col-md-2 chosen-select" })
                                        @Html.ValidationMessageFor(model => model.maThucPham, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        @Html.LabelFor(model => model.ngayTao, htmlAttributes: new { @class = "col-sm-3" })
                                        <div class="col-sm-6">
                                            @Html.EditorFor(model => model.ngayTao, new { htmlAttributes = new { @class = "form-control", @id = "", @type = "date" } })
                                            @Html.ValidationMessageFor(model => model.ngayTao, null, new { @class = "text-danger" })
                                        </div>
                                    </div>*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.soLuong, "Số lượng * (kg)", htmlAttributes: new { @class = "col-sm-3" })
                                    <div class="col-sm-4">
                                        @Html.EditorFor(model => model.soLuong, new { htmlAttributes = new { @class = "form-control", @id = "soLuong" } })
                                        @Html.ValidationMessageFor(model => model.soLuong, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        @Html.LabelFor(model => model.donViTinh, htmlAttributes: new { @class = "col-sm-3" })
                                        <div class="col-sm-3">
                                            @Html.EditorFor(model => model.donViTinh, new { htmlAttributes = new { @class = "form-control", @id = "donGia" } })
                                            @Html.ValidationMessageFor(model => model.donViTinh, null, new { @class = "text-danger" })
                                        </div>
                                    </div>*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ghiChu, htmlAttributes: new { @class = "col-sm-3" })
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.ghiChu, new { @class = "form-control", @rows = 5 })
                                        @Html.ValidationMessageFor(model => model.ghiChu, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-sm-offset-3 col-sm-10">
                                        <button type="reset" class="btn btn-primary" style="margin-right:10px;"><i class="fa fa-refresh"></i>Làm mới</button><button type="submit" value="Lưu thông tin" class="btn btn-primary"><i class="fa fa-save"></i>Lưu thông tin</button>
                                    </div>
                                </div>
                            </fieldset>
                            @*//thêm thực phẩm*@
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>



<style>
    fieldset.the-fieldset {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    legend.the-legend {
        font-size: 1.2em !important;
        font-weight: bold !important;
        text-align: left !important;
        width: inherit;
        padding: 0 10px;
        border-bottom: none;
    }

    .custom-chosen .chosen-container-single .chosen-single {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.428571429;
        color: #555;
        vertical-align: middle;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
        box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
        -webkit-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    }
</style>
<link href="~/Content/css/chosen.min.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/chosen.jquery.js"></script>

    <script>
        $(document).ready(function () {
            $(".chosen-select").chosen();
        });
    </script>

}

