@model TestDA.Areas.Manager.Models.ViewModel.HocPhiData

<h4>DANH SÁCH HỌC PHÍ THU</h4>
<table class="table table-bordered table-hover" id="dsHocPhiThu">
    <thead>
        <tr class="th-style">
            <th>Tháng</th>
            <th>Tổng học phí thu</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.danhSachHocPhi.Count > 0)
            {
                //int j = 0;
                foreach (var i in Model.danhSachHocPhi)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => i.thang)</td>
                        <td>
                            @*hiển thị chi tiết khoản đóng*@
                            @Html.Action("HocPhiThuThangPartial", "HocPhi", new { namHoc = @i.namHoc, thang = @i.thang})
                            <p><b>Tổng thu:</b> @Html.Raw(string.Format("{0:N0}", @i.tongHocPhi))</p>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2"> <p style="text-align:center;font-weight:bold;">Không có bản ghi nào</p></td>
                </tr>
            }
        }
    </tbody>
</table>
