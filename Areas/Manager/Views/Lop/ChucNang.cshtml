@model TestDA.Areas.Manager.Models.ViewModel.LopData

@{
    ViewBag.Title = "ChucNang";
    Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
}

<section class="content-header">
    <h1>
        <i class="fa fa-building-o"></i>
        Lớp học
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Lớp học</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="container body-content ">
        <h3>@ViewBag.ChucNang </h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="body-nhaCC form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.tenLop, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.tenLop, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tenLop, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.nhomLop, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.nhomLop, null, "--Chọn nhóm lớp-- ", new { @class = "form-control", @id = "name-group", @style = "width: 300px;" })
                        @Html.ValidationMessageFor(model => model.nhomLop, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.moTa, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-7">
                        @Html.TextAreaFor(model => model.moTa, new { @class = "form-control", @rows = 5 })
                        @Html.ValidationMessageFor(model => model.moTa, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ActionLink("<< Quay lại danh sách", "Index", "Lop")
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="reset" class="btn btn-default" style="margin-right:10px;"><i class="fa fa-refresh"></i>Làm mới</button><button type="submit" value="Lưu thông tin" class="btn btn-default"><i class="fa fa-save"></i>Lưu thông tin</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
@section Scripts{
    <script>
    </script>
}

