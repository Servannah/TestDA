@model TestDA.Areas.Manager.Models.ViewModel.DoiTuongUuTienData
@{
    ViewBag.Title = "ChucNang";
    Layout = "~/Areas/Manager/Views/Shared/_AdminPartial.cshtml";
}

<section class="content-header">
    <h1>
        <i class="fa fa-building-o"></i>
        Loại đối tượng ưu tiên
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Loại đối tượng ưu tiên</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="container body-content ">
        <h3>@ViewBag.ChucNang </h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()            
            <div class="body-DTUT form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*@Html.HiddenFor(model=>model.maUuTien)*@
                <div class="form-group">
                    @Html.LabelFor(model => model.loaiDT, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.loaiDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.loaiDT, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.dinhMucGiam, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.dinhMucGiam, new { htmlAttributes = new { @class = "form-control" } })<span>(%)</span>
                        @Html.ValidationMessageFor(model => model.dinhMucGiam, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.moTa, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-7">
                        @Html.TextAreaFor(model => model.moTa, new { @class = "form-control", @rows = 5 })
                        @Html.ValidationMessageFor(model => model.moTa, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <i class="fa fa-angle-double-left"> </i>@Html.ActionLink("Quay lại danh sách", "Index", "DoiTuongUuTien")
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="reset" class="btn btn-default" style="margin-right:10px;"><i class="fa fa-refresh"></i>Làm mới</button><button type="submit" value="Lưu thông tin" class="btn btn-default"><i class="fa fa-save"></i>Lưu thông tin</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
@section Scripts{
    <script>
    </script>
}

