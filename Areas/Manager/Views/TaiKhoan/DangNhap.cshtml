@model TestDA.Areas.Manager.Models.ViewModel.DangNhap
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Areas/Manager/Views/Shared/_DefaultPartial.cshtml";
}
@section Styles {
    <link href="@Url.Content("~/Content/css/admin.css")" rel="stylesheet" type="text/css" />
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container main-default">
        <div class="login-page">
            <h3>Đăng nhập trang quản trị</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.tenDangNhap, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.tenDangNhap, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập" } })
                @Html.ValidationMessageFor(model => model.tenDangNhap, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.matKhau, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control", placeholder = "Mật khẩu" } })
                @Html.ValidationMessageFor(model => model.matKhau, null, new { @class = "text-danger" })
            </div>
            <div class="form-group submit-login">
                <input type="submit" value="Đăng nhập hệ thống" class="btn btn-default" />
                <br />
                @*<b> @Html.ActionLink("Tạo mới tài khoản", "DangKi", "TaiKhoan")</b>*@
                <b> @Html.ActionLink("Đổi mật khẩu", "DoiMatKhau", "TaiKhoan")</b>
            </div>
        </div>
    </div>
}

