@model TestDA.Areas.Manager.Models.ViewModel.DangKi

@{
    ViewBag.Title = "DangKi";
    Layout = "~/Areas/Manager/Views/Shared/_DefaultPartial.cshtml";
}
@section Styles {
    <link href="@Url.Content("~/Content/css/admin.css")" rel="stylesheet" type="text/css" />
}
<div class="container">
    <div class="main-signup form-signup ">
        <h3>Đăng kí tài khoản </h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="col-md-offset-3 col-md-9">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.tenDangNhap, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.tenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tenDangNhap, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.matKhau, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.matKhau, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-inline  form-group">
                    @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="form-group col-md-3" style="width:30%;margin-left: 0px;">

                        @Html.EditorFor(model => model.ho, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ", @style = "width:100%;" } })
                        @Html.ValidationMessageFor(model => model.ho, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-5" style="margin-left:10px;">
                        @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên" } })
                        @Html.ValidationMessageFor(model => model.ten, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.gioiTinh, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.gioiTinh, new List<SelectListItem> {
                        new SelectListItem { Text="Nam", Value="M" },
                        new SelectListItem { Text="Nữ", Value="F" }
                    }, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9 add-button">
                        <input type="submit" value="Đăng kí" class="btn btn-default btn-primary" style="margin-right:10px;" /><input type="reset" value="Hủy bỏ" class="btn btn-default btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
