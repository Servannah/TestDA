    <div class="container">
        <h2>@Html.DisplayFor(model => model.name)</h2>
        <p class="date-publish"></p>
        <div class="content-page">
            @Html.Raw(Model.content)
        </div>
        <div class="clearfix"></div>
    </div>
</div>